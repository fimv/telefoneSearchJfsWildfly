<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">org.h2.Driver</property>
		<property name="connection.url">jdbc:h2:mem:cadastrodb</property>
		<property name="dialect">org.hibernate.dialect.H2Dialect</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="connection.username">sa</property>
		<property name="connection.password" />
		<property name="hbm2ddl.auto">update</property>
		<property name="hibernate.search.directory_provider">filesystem</property>
        <property name="hibernate.search.indexBase">/tmp/index2</property>
        <property name="hibernate.search.indexmanager">near-real-time</property>
	</session-factory>
</hibernate-configuration>